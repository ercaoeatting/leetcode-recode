{ 
    "version": "2.0.0", 
    "C_Cpp.intelliSenseEngine": "disabled",
    "tasks": [ 
        { 
             "label": "build", //在launch.json文件中有用到 
             "type": "shell", 
             "command": "g++", 
             "args": [ 
                    "-g", 
                    "-fdiagnostics-color=always",
                    "${file}", 
                    "-o", 
                    "${fileDirname}/built/${fileBasenameNoExtension}.out" 
             ], 
             "options": {"cwd": "/usr/bin"},
             "group": { 
                    "kind": "build", 
                    "isDefault": true 
              },
         } 
    ] 
}